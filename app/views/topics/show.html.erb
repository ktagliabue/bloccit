<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
    <small>
     <%= image_tag(post.user.avatar.tiny.url) if post.user.avatar? %>
     submitted <%= time_ago_in_words(post.created_at) %> ago by
     <%= post.user.name %><br/>
     <%= post.comments.count %> Comments
   </small>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to (markdown post.title), [@topic, post], class: 'btn btn-success' %>
    <% end %>
  </div>
</div>